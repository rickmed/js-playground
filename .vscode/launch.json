{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch Node",
            "type": "node",
            "request": "launch",
            "program": "${file}",
            "stopOnEntry": false,
            "args": [
              "${file}"
            ],
            "runtimeExecutable": null,
            "runtimeArgs": [
                "--nolazy"
            ],
            "env": {
                "NODE_ENV": "development"
            },
            "externalConsole": false,
            "preLaunchTask": "",
            "sourceMaps": true,
            "outDir": null
        },
        {
            "name": "Attach",
            "type": "node",
            "request": "attach",
            "port": 5858
        }
    ]
}